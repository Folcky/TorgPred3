        <Setter Property="Foreground" Value="#01D328"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ProgressBar}">
                    <Grid Margin="0,0,0,0">
                        <Border Name="PART_Track" Background="#FFEFEFEF"></Border>
                        <Border Name="PART_Indicator" Background="#FF1BA1E2" HorizontalAlignment="Left"></Border>
                    </Grid>
                    <ControlTemplate.Triggers>
